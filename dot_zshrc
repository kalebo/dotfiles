alias emt='emacsclient -t'

export cf=$HOME/cf/master/

## Personal functions

emc() {emacsclient -c "$*" & disown}
emw() {emacsclient "$*" & disown}
wcd() {latexmk -pvc -pdf "$*"}
dexec() {sudo docker exec -i -t $1 /bin/bash}
tel() {cd $((dirs -l | tr ' ' '\n')| fzf --height=10%)}

function set_wez_workspace() {
  export WEZ_WORKSPACE=$1
  local encoded
  encoded=$(printf '%s' "$1" | base64)
  printf '\033]1337;SetUserVar=%s=%s\007' workspace "$encoded"
}

function set_terminal_title() {
  # Just set the base title â€” wezterm will prepend [ws:N]
  print -Pn "\e]2;%n@%m: %~\e\\"
}
precmd_functions+=(set_terminal_title)

function gitdot {
   git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME $@
}

